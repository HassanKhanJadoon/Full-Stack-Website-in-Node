<!DOCTYPE html>
<!-- Created By CodingLab - www.codinglabweb.com -->
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title> Responsive Registration Form</title>

    {{!-- bootstrap --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body style="margin: 0; height: 75vh; display: flex; flex-direction: column; justify-content: space-between;">
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s"
        style="background-color: #f8f9fa; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);">
        <div style="max-width: 1170px; padding: 0 15px; margin: 0 auto;">
            <div class="row">
                <div class="col-12" style="display: flex; align-items: center; justify-content: space-between;">
                    <nav class="main-nav" style="display: flex; align-items: center;">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo" style="display: inline-block; margin-right: 30px;">
                            <img src="assets/images/logo.png" alt="Chain App Dev" style="height: 50px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav" style="list-style: none; padding: 0; display: flex;">
                            <li class="scroll-to-section" style="margin-right: 20px;"><a href="#top" class="active"
                                    style="color: #333; text-decoration: none;">Home</a></li>
                            <li class="scroll-to-section" style="margin-right: 20px;"><a href="#about"
                                    style="color: #333; text-decoration: none;">About</a></li>
                            <li class="scroll-to-section" style="margin-right: 20px;"><a href="/secret-page"
                                    style="color: #333; text-decoration: none;">Secret</a></li>
                            <li class="scroll-to-section" style="margin-right: 20px;"><a href="/profile-page"
                                    style="color: #333; text-decoration: none;">Profile</a></li>
                            <li class="scroll-to-section" style="margin-right: 20px;"><a href="/logout-page"
                                    style="color: #333; text-decoration: none;">Logout</a></li>
                            <li style="margin-right: 20px;">
                                <div class="gradient-button"
                                    style="padding: 5px 15px; background: linear-gradient(45deg, #ff416c, #ff4b2b); border-radius: 5px;">
                                    <a id="modal_trigger" href="/registration-page"
                                        style="color: white; text-decoration: none;"><i
                                            class="fa fa-sign-in-alt"></i>Register</a>
                                </div>
                            </li>
                            <li>
                                <div class="gradient-button"
                                    style="padding: 5px 15px; background: linear-gradient(45deg, #6dd5ed, #2193b0); border-radius: 5px;">
                                    <a id="modal_trigger" href="/login-page"
                                        style="color: white; text-decoration: none;"><i
                                            class="fa fa-sign-in-alt"></i>Login</a>
                                </div>
                            </li>
                        </ul>
                        <a class='menu-trigger' style="display: none;">
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <div class="container">
        <div class="title">Registration</div>
        <div class="content">

            <!-- Display validation error flash message -->
            {{#if error.length}}
            <div id="myAlertReg" class="alert alert-danger">
                {{error.[0]}}
            </div>
            {{/if}}

            <form action="/register" method="post">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Full Name</span>
                        <input type="text" name="fullName" placeholder="Enter your name" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Username</span>
                        <input type="text" name="userName" placeholder="Enter your username" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Email</span>
                        <input type="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Phone Number</span>
                        <input type="text" name="phoneNumber" placeholder="Enter your number" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Password</span>
                        <input type="password" name="password" placeholder="Enter your password" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Confirm Password</span>
                        <input type="password" name="confirmPassword" placeholder="Confirm your password" required>
                    </div>
                </div>
                <div class="gender-details">
                    <input type="radio" name="gender" id="dot-1">
                    <input type="radio" name="gender" id="dot-2">
                    <input type="radio" name="gender" id="dot-3">
                    <span class="gender-title">Gender</span>
                    <div class="category">
                        <label for="dot-1">
                            <span class="dot one"></span>
                            <span class="gender">Male</span>
                        </label>
                        <label for="dot-2">
                            <span class="dot two"></span>
                            <span class="gender">Female</span>
                        </label>
                        <label for="dot-3">
                            <span class="dot three"></span>
                            <span class="gender">Prefer not to say</span>
                        </label>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="SignUp">
                </div>
            </form>
            {{!-- <h3 style="text-align: center;">OR</h3> --}}
            <form action="/login-page">
                <div class="button">
                    <input type="submit" value="Login">
                </div>
            </form>
            <form action="/data" method="get">
                <div class="button">
                    <input type="submit" value="Read Data Saved">
                </div>
            </form>

        </div>
    </div>

    {{!-- javascript --}}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <!-- JavaScript code to hide the alert after 3 seconds -->
    <script>
        $(document).ready(function () {
            // Target the alert by its ID
            var alertElement = $("#myAlertReg");

            // Check if the alert exists
            if (alertElement.length) {
                // Hide the alert after 3 seconds
                setTimeout(function () {
                    alertElement.alert("close"); // Using Bootstrap's alert("close") method
                }, 8000);
            }
        });
    </script>
</body>

</html>